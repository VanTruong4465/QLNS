@model IEnumerable<Quanlynhansu.Models.BANGCONG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function toggle(source) {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i] != source)
                checkboxes[i].checked = source.checked;
        }
    }

</script>
<div class="card-header">
    <a style="border-radius: 10%" href="@Url.Action("Create","ThoiViecs")">Thêm</a>
</div>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @using (Html.BeginForm("Index", "BangCong", FormMethod.Post, new { @class = "" }))
            {
                <div class=" d-flex" style="width:500px">
                    @Html.DropDownList("thang", null, htmlAttributes: new { @class = " form-control" })
                    @Html.DropDownList("nam", null, htmlAttributes: new { @class = " form-control" })
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">

                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            }

            <div class="card-tools float-right " style="margin-right:0px">

                <button type="button" class="btn btn-tool col-md-2" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>




        </div>
        <div class="card-body p-0" style="overflow-y: hidden; overflow-x: auto;">
            <table class="table table-striped projects" id="example1">
                <thead>
                    <tr>
                        <th><input type="checkbox" onclick="toggle(this);" /> </th>

                        <th>
                            TÊN NHÂN VIÊN
                        </th>
                        <th>
                            CÔNG CN
                        </th>
                        <th>
                            CÔNG LỄ
                        </th>
                        <th>
                            CÔNG THƯỜNG
                        </th>
                        <th>
                            NGHĨ CÓ PHÉP
                        </th>
                        <th>
                            NGHĨ KHÔNG PHÉP
                        </th>
                        <th>
                            TỔNG NGÀY CÔNG
                        </th>
                        <th>Tháng</th>
                        <th>Năm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                <input type="checkbox" />
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.NHANVIEN.HOTEN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CONGCN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CONGLE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CONGTHUONG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NGHICP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NGHIKP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TONGC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.THANG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NAM)
                            </td>
                            <td class="text-right py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Details", new { id = item.MAC})" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.MAC})" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                    <a href="@Url.Action("Edit", new { id = item.MAC})" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
                                </div>

                            </td>

                        </tr>
                    }

                </tbody>
            </table>

            @* <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 ">
                        <li class="page-item">@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</li>
                    </ul>
                </div>*@



        </div>


        <!-- /.card-body -->
    </div>
    <div style="height:30px">
        <a href="@Url.Action("Tinh", new { thang = ViewBag.t, nam =ViewBag.n })" class="btn-success" style="padding:5px;border-radius:10%;">Tính</a>
    </div>
    <!-- /.card -->

</section>






